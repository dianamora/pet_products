<div class="panel panel-default">
  <div class-"panel-body">
    <div class="row">
      <div class="col-md-4">
      <%= image_tag @product.image, style: "width: 200px; display: block" %>
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @product.title %></td>
            </tr>
            <tr>
              <td><strong>Description:</strong></td>
              <td><%= @product.description %></td>
            </tr>
            <tr>
              <td><strong>Rating:</strong></td>
              <td><%= @product.rating %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to "Write a Review", new_product_review_path(@product) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @product.title %></h1>
        <p><%= @product.description %></p>

        <% if @reviews.blank? %>
        <h3>No reviews, would you like to add one?</h3>
        <%= link_to "Write Review", new_product_review_path(@product), class: "btn btn-danger" %>
        <% else %>
        <% @reviews.each do |review| %>
          <div class="reviews">
            <p><%= review.rating %></p>
            <p><%= review.comment %></p>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_product_path(@product) %> |
<%= link_to "Back", products_path %>
