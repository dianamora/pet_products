<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
      <%= image_tag @product.image, style: "width: 400px; display: block" %>
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Title:</strong>   <%= @product.title %></td>
            </tr>
            <tr>
              <td><strong>Description:</strong>   <%= @product.description %></td>
            </tr>
            <tr>
              <td><strong>Rating:</strong>    <%= @product.rating %></td>
            </tr> 
          </tbody>
        </table>
        <%= link_to "Write a Review", new_product_review_path(@product) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @product.title %></h1>
        <p><%= @product.description %></p>

        <% if @reviews.blank? %>
          <h3 class="no-reviews-msg">No reviews yet, would you like to add one?</h3>
          <%= link_to "Write Review", new_product_review_path(@product), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
          <div class="reviews">
            <p><%= review.comment %></p>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if current_user == @product.user %>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Delete", { controller: "products", action: "destroy" }, data: { confirm: "Are you sure you want to delete this product post?" }, method: :delete  %> 
<% else %>
  <%= link_to "Back", products_path %>
<% end %>
